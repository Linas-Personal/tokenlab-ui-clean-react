# ============================================================================
# TokenLab ABM Simulator - Environment Configuration
# ============================================================================
# Copy this file to .env and configure values for your environment
#
# SECURITY: Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Backend API Configuration
# ----------------------------------------------------------------------------

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS Origins (comma-separated list of allowed frontend origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:5174,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true  # Set to false to disable rate limiting (for development only)
DEFAULT_RATE_LIMIT=100/minute  # Requests per minute per IP

# Request Size Limits
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# ABM Job Queue Configuration
ABM_MAX_CONCURRENT_JOBS=5  # Maximum number of concurrent simulation jobs
ABM_JOB_TTL_HOURS=24  # Time-to-live for completed job results in hours

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------

# API Base URL (used by frontend to connect to backend)
# Development: http://127.0.0.1:8000
# Production: https://your-api-domain.com
VITE_API_URL=http://127.0.0.1:8000

# ----------------------------------------------------------------------------
# Monitoring & Observability (Production)
# ----------------------------------------------------------------------------

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production  # development, staging, production
# SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% of transactions for performance monitoring

# Prometheus Metrics (optional)
# METRICS_ENABLED=true
# METRICS_PORT=9090

# ----------------------------------------------------------------------------
# Deployment Configuration
# ----------------------------------------------------------------------------

# Server Settings
# HOST=0.0.0.0  # Bind to all interfaces in production
# PORT=8000
# WORKERS=4  # Number of Uvicorn workers

# Database (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/tokenlab
# DATABASE_POOL_SIZE=20

# Redis Cache (if using distributed caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_TTL=3600  # Cache TTL in seconds

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------

# Test Environment
# PYTEST_DISABLE_WARNINGS=1
# TEST_LOG_LEVEL=WARNING

# Debug Mode
# DEBUG=false  # Never enable in production!

# ----------------------------------------------------------------------------
# Security & Authentication (if implementing auth)
# ----------------------------------------------------------------------------

# JWT Secrets (if using JWT authentication)
# JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (if using API key authentication)
# API_KEY_HEADER=X-API-Key
# VALID_API_KEYS=key1,key2,key3  # Comma-separated list

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------

# Connection Pool Settings
# DB_POOL_MIN_SIZE=5
# DB_POOL_MAX_SIZE=20
# DB_POOL_TIMEOUT=30

# Cache Settings
# CACHE_ENABLED=true
# CACHE_TTL=3600  # seconds
# CACHE_MAX_SIZE=1000  # Maximum number of cached items

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# ABM Features
# ENABLE_MONTE_CARLO=true
# ENABLE_VOLUME_TRADING=true
# ENABLE_STAKING=true
# ENABLE_TREASURY=true

# API Features
# ENABLE_SSE_STREAMING=true
# ENABLE_RESULT_CACHING=true

# ----------------------------------------------------------------------------
# External Services (if needed)
# ----------------------------------------------------------------------------

# Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@tokenlab.com

# Cloud Storage (for large result files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=tokenlab-results
# AWS_REGION=us-east-1
