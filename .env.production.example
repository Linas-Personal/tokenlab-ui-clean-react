# Production Environment Variables Template
# Copy this to .env.production and fill in actual values

# Backend Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Sentry Error Tracking
SENTRY_DSN=https://your-key@o0.ingest.us.sentry.io/0000000
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Prometheus Metrics
PROMETHEUS_ENABLED=true

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Frontend (create frontend/.env.production with these)
VITE_API_URL=https://api.yourdomain.com
VITE_SENTRY_DSN=https://your-frontend-key@o0.ingest.us.sentry.io/0000000
VITE_ENVIRONMENT=production

# Monitoring (Optional - for docker-compose with monitoring profile)
GRAFANA_PASSWORD=your_secure_password_here

# Slack Webhook (Optional - for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty (Optional - for critical alerts)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here
